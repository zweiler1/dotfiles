        "tooltip": false
    },

    // Backlight
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
        "tooltip": false
    },



    // UNUSED PROPERTIES

    // Idle Inhibitor
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    // CPU
    "cpu": {
        "format": "{usage}% Ôãõ"
    },

    // Memory
    "memory": {
        "format": "{}% ÔÉâ"
    },

    // Temperature
    "temperature": {
